{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@ActivityCard/*": [
        "src/components/ActivityCard/*"
      ],
      "@IssuedItems/*": [
        "src/components/IssuedItems/*"
      ],
      "@Menubar/*": [
        "src/components/Menubar/*"
      ]
    }
  },
  "include": [
    "node_modules/vite/client.d.ts",
    "**/*"
  ]
}